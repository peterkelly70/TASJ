# Application Settings
# ------------------------------------------------------------
DEBUG_MODE=true                            # Enable debug mode (true/false)
LOG_LEVEL=INFO                             # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SECRET_KEY=your_secret_key_here            # Secret key for securing sessions and cookies
APP_NAME=Travellers Aid Society Journal
APP_SHORTNAME=TASJ 

# Database Configuration
# ------------------------------------------------------------
DATABASE_TYPE=mysql                 # Type of database (mysql, sqlite, postgres, mariadb)
DATABASE_USERNAME=root              # Database username
DATABASE_PASSWORD=password          # Database password
DATABASE_HOST=127.0.0.1             # Database host IP address
DATABASE_PORT=3306                  # Database port (default 3306 for MySQL)
DATABASE_NAME=traveller_campaign    # Name of the database
DATABASE_FILE_PATH=database/traveller_campaign.db  # SQLite database file path (only used if DATABASE_TYPE=sqlite)

# OpenAI API Configuration
# ------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here  # API key for accessing OpenAI services

# Timezone Settings
# ------------------------------------------------------------
DEFAULT_TIMEZONE=Australia/Perth         # Default timezone for the application
                                         # Examples: 'UTC', 'America/New_York', 'Europe/London', 'Australia/Perth'

# Email Configuration
# ------------------------------------------------------------
EMAIL_HOST=smtp.example.com              # SMTP server host for sending emails
EMAIL_PORT=587                           # SMTP server port (587 for TLS, 465 for SSL)
EMAIL_USERNAME=user@example.com          # Email username (full email address)
EMAIL_PASSWORD=email_password_here       # Email password
EMAIL_USE_TLS=true                       # Use TLS for email (true/false)
EMAIL_USE_SSL=false                      # Use SSL for email (true/false)

# AWS Configuration
# ------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key_id      # AWS Access Key ID
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key  # AWS Secret Access Key
AWS_REGION=us-west-2                         # AWS region (e.g., us-west-2, us-east-1)

