[Display]
# Theme options: dark, light, system
theme = dark

# Window dimensions
window_width = 1024
window_height = 768

# Window position (top-left corner)
window_x = 100
window_y = 50

[Preferences]
# Supported language options, currently only English
language = en

# Enable or disable automatic window resizing
auto_resize = true

# Show splash screen on startup
show_splash = true
